{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0",
  "description": "Highlight text on any webpage with persistent storage and Markdown export",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "highlight.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["texthighlight.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Shift+H+L",
        "mac": "Shift+H+L"
      }
    }
  },
  "icons": {
    "128": "highlight.png"
  }
}
